                "first_name": "john",
                "last_name": "don",
                "date_of_birth": "24-05-1983",
                "identification_number": "12345678902",
                "address": {
                  "street": "13, muilli street",
                  "city": "ikeja",
                  "state": "lagos",
                  "postal_code": "100001",
                  "country": "NG"
                },
                "phone": {
                  "phone_country_code": "+234",
                  "phone_number": "8144194590"
                }
              }
            }
          }
        },
        "parameters": [
          
          {
            "name": "accountId",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
